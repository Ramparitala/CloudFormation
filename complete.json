{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "ComplexAWS Network",
    
    "Parameters": {
        
        "VPCcidrblock": {
            "Description": "CIDR block for VPC ",
            "Type": "String",
            "Default": "10.10.0.0/16",
        },

        "subnet1cidr": {
            "Description": "CIDR for subnet1",
            "Type": "String",
            "Default": "10.10.0.0/24",
        },
        "subnet2cidr": {
            "Description": "CIDR for subnet2",
            "Type": "String",
            "Default": "10.10.1.0/24",
        },
        "subnet3cidr": {
            "Description": "CIDR for subnet3",
            "Type": "String",
            "Default": "10.10.2.0/24",
        },    
        "subnet4cidr": {
            "Description": "CIDR for subnet4",
            "Type": "String",
            "Default": "10.10.3.0/24",
        },
        
        "subnet1az": {
            "Description": "AZ of subnet1",
            "Type":"AWS::EC2::AvailabilityZone::Name",
        },
        "subnet2az": {
            "Description": "AZ of subnet2",
            "Type":"AWS::EC2::AvailabilityZone::Name",
        },
        "subnet3az": {
            "Description": "AZ of subnet3",
            "Type":"AWS::EC2::AvailabilityZone::Name",
        },
        "subnet4az": {
            "Description": "AZ of subnet4",
            "Type":"AWS::EC2::AvailabilityZone::Name",
        }
    },
    
    "Resources" : {
        
        "Complex": {
          "Type": "AWS::EC2::VPC",
          "Properties": {
            "CidrBlock": { "Ref": "VPCcidrblock" } 
          }
        },
        
        "subnet1": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "subnet1az" }, 
            "VpcId": { "Ref": "Complex" },
            "CidrBlock": { "Ref": "subnet1cidr" }
            
          }
        },  
        
        "subnet2": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "subnet2az" },
            "VpcId": { "Ref": "Complex" },
            "CidrBlock": { "Ref": "subnet2cidr" }
          }
        },
        
        "subnet3": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "subnet3az" },
            "VpcId": { "Ref": "Complex" },
            "CidrBlock": { "Ref": "subnet3cidr" }
          }
        },
        
        "subnet4": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "subnet4az" },
            "VpcId": { "Ref": "Complex" },
            "CidrBlock": { "Ref": "subnet4cidr" }
          }
        },
        
        "Myfirstsg" : {
          "Type" : "AWS::EC2::SecurityGroup",
          "Properties" : {
            "GroupName" : "Allow SSH",
            "GroupDescription" : "This is for Allow SSH connection",
            "VpcId" : { "Ref": "Complex" },
            "SecurityGroupIngress": [
                {
                   "IpProtocol": "tcp",
                   "FromPort": 22,
                   "ToPort": 22,
                   "CidrIp": "0.0.0.0/0"
                },
                {
                  "IpProtocol": "tcp",
                  "FromPort": 80,
                  "ToPort": 80,
                  "CidrIp": "0.0.0.0/0"
               }
             ],
             
          }
        }    
    }
}